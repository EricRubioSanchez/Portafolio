---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ExperienceIcon from "../icons/Experience.astro";
import Estudios from "../components/Estudios.astro";
import EstudiosIcon from "../icons/Estudios.astro";
import ProyectosIcon from "../icons/Proyectos.astro";
import Proyectos from "../components/Projects.astro";
---

<Layout title="Eric Rubio Sánchez - Desarrollador Web y Estudiante de Videojuegos" description="Portafolio de Eric Rubio Sánchez, desarrollador web y estudiante de videojuegos. Explora mis proyectos, habilidades y experiencia en desarrollo web y creación de videojuegos." keywords="Eric Rubio Sánchez, portafolio, desarrollador web, estudiante de videojuegos, proyectos de desarrollo web, habilidades de programación, experiencia en desarrollo web, creación de videojuegos">
	<main class="px-4  w-full">
		<SectionContainer class="py-24 pb-24" id="Inicio">
			<Hero />
		</SectionContainer>
		
		<SectionContainer id="Estudios">
			<h2 class="text-3xl font-bold text-white mb-10 flex gap-x-2 items-center"><EstudiosIcon class="w-8 h-8" /> Estudios</h2>
			<Estudios />
		</SectionContainer>
		<SectionContainer id="Proyectos">
			<h2 class="text-3xl font-bold text-white mb-10 flex gap-x-2 items-center"><ProyectosIcon class="w-8 h-8" /> Proyectos</h2>
			<Proyectos />
		</SectionContainer>
		<SectionContainer id="Experiencia">
			<h2 class="text-3xl font-bold text-white mb-10  flex gap-x-2 items-center"><ExperienceIcon class="w-8 h-8" /> Experiencia</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
